# =============================================================================
# GovContract AI — Environment Variables
# Copy this file to .env and fill in your values.
# Never commit .env to version control.
# =============================================================================

# --- SAM.gov API ---
# Register at https://sam.gov → Account → API Keys
# Format: SAM-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
SAM_GOV_API_KEY=

# --- Anthropic / Claude API ---
# Get your key at https://console.anthropic.com
ANTHROPIC_API_KEY=

# --- Supabase (V2 — leave blank for V1 in-memory mode) ---
# Create a free project at https://supabase.com
SUPABASE_URL=
SUPABASE_ANON_KEY=

# --- PostgreSQL / Supabase Direct Connection ---
# Leave blank to run in V1 in-memory mode (clusters + opportunities are lost on restart).
# Set to your Supabase connection string for persistent storage.
# Format: postgresql+asyncpg://postgres.[ref]:[password]@[region].pooler.supabase.com:5432/postgres
# Find it in: Supabase Dashboard → Project Settings → Database → Connection string → URI
DATABASE_URL=

# --- Email Alerts (SendGrid) ---
# Free tier: 100 emails/day. Sign up at https://sendgrid.com
# Leave blank to disable email alerts (Scout will still run and log results).
SENDGRID_API_KEY=
ALERT_EMAIL_TO=you@example.com

# --- Scout Agent ---
# How often the Scout agent runs (hours). Default: 6
SCOUT_INTERVAL_HOURS=6
# Minimum match score (0–100) for an opportunity to trigger an alert. Default: 40
SCOUT_SCORE_THRESHOLD=40

# --- Matching Thresholds ---
# Score >= HIGH_MATCH_THRESHOLD is tagged "high". Default: 70
HIGH_MATCH_THRESHOLD=70
# Score >= MEDIUM_MATCH_THRESHOLD is tagged "medium". Default: 50
MEDIUM_MATCH_THRESHOLD=50

# --- App Settings ---
DEBUG=false
